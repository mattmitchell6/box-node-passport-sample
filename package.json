{
  "name": "express-4.x-local-example",
  "version": "0.0.0",
  "description": "Express 4.x app using Passport for authentication with username and password.",
  "scripts": {
    "start": "nodemon app.js",
    "watch-css": "catw -c 'styles/**/*.css' -o public/css/bundle.css -v",
    "watch-js": "watchify styles/foundation-6.4.1/**/*.js -o public/js/bundle.js -dv",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' './styles/foundation-6.4.1/**/*.css' > ./public/css/bundle.css",
    "build-js": "browserify ./styles/foundation-6.4.1/**/*.js > ./public/js/bundle.js",
    "build": "npm run build-css && npm run build-js"
  },
  "author": "Matt Mitchell",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.13.3",
    "box-node-sdk": "^1.7.0",
    "config": "^1.26.1",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.3.5",
    "ejs": "^2.3.3",
    "express": "^4.13.3",
    "express-session": "^1.11.3",
    "mongoose": "^4.10.8",
    "nodemon": "^1.11.0",
    "passport": "^0.2.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "catw": "^1.0.1"
  }
}
